resource "aws_key_pair" "ondrejsika" {
  key_name   = "ondrejsika"
  public_key = "ssh-rsa  ondrej@ondrejsika.com"
}

resource "aws_security_group" "allow_all" {
  name = "allow_all"
  ingress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

resource "aws_instance" "ec2" {
  ami           = "ami-049ed5fa529109ac4"
  instance_type = "t2.micro"
  key_name      = aws_key_pair.ondrejsika.key_name
  security_groups = [
    aws_security_group.allow_all.name,
  ]
}

output "ip" {
  value = aws_instance.ec2.public_ip
}

output "ssh" {
  value = "admin@${aws_instance.ec2.public_ip}"
}
